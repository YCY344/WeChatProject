.box {
  width: 95%;
  margin: 40rpx auto;
  box-sizing: border-box;
  padding: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.box-title {
  font-weight: bold;
  padding-bottom: 20rpx;
  border-bottom: 4rpx solid #f3f3f3;
  margin-bottom: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
  gap: 20rpx 0;
  font-size: 30rpx;
}

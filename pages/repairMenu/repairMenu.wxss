.menu {
  width: 95%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  gap: 40rpx 0;
}

.menu-item {
  width: 100%;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #f00;
  color: #fff;
  gap: 0 40rpx;
}

.menu-item:nth-child(1) {
  background-color: rgb(94, 220, 163);
}

.menu-item:nth-child(2) {
  background-color: rgb(255, 204, 128);
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.text-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx 0;
}

.title {
  font-size: 40rpx;
}

.desc {
  font-size: 26rpx;
}